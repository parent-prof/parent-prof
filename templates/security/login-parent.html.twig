<!doctype html>
<html lang="en" style="height: 100%">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="{{ asset('images/fav.ico') }}">

    <title>Connexion | Parent-Prof</title>
</head>
<body style="height: 100%; ">
    <div class="container-fluid h-100" style="background-image: url(/images/school.jpg ); background-size: cover;">
        <div class="row h-100">
            <div class="col-3 h-100 my-auto" style="background-color: #FFFFFF">
                <div style="margin-left: 10%; margin-right: 10%">
                    <div style="margin-top: 50%" class="text-center">
                        <img src="{{ asset('/images/logo.png') }}"alt="image" width="200" height="200" style="margin-top: -50px">
                        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                    </div>
                    <form method="post" style="margin-top: 20%">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="form-group">
                            <label for="inputEmail">Adresse mail</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus style="background-color: #F7F7F8" placeholder="name@example.com">
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required  style="background-color: #F7F7F8" placeholder="Mot de passe">
                        </div>

                        {#<input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
                        #}
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                            </label>
                        </div>

                        <button class="btn btn-lg col-12" type="submit" style="background-color: #1ABC9C; color: white">
                            Me connecter
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>